{
  "name": "boostrap-minimal",
  "version": "0.0.1",
  "description": "Minimal bootstrap for prototyping",
  "main": "dist/main.bundle.js",
  "scripts": {
    "clean": "rimraf dist",
    "start": "webpack-dev-server --progress --profile --colors",
    "build": "npm run clean; webpack --config webpack.config.js",
    "build:prod": "npm run clean; cross-env NODE_ENV=production webpack --config webpack.config.js --optimize-minimize -p",
    "lint": "tslint --type-check --project tsconfig.json src/**/*.ts",
    "test": "npm run test:mocha",
    "test:karma": "karma start karma.config.js",
    "test:mocha": "mocha --compilers ts:ts-node/register test/ --recursive",
    "test:mocha.ci": "mocha --compilers ts:ts-node/register test/ --recursive --reporter mocha-junit-reporter",
    "test:coverage": "nyc npm run test:mocha.ci"
  },
  "author": "d3trax",
  "license": "MIT",
  "dependencies": {
    "compression": "^1.6.2",
    "cross-env": "^5.0.1",
    "express": "^4.15.3",
    "rimraf": "^2.6.1",
    "rxjs": "^5.4.1",
    "socket.io": "^2.0.3",
    "socket.io-client": "^2.0.3",
    "typescript": "^2.3.4",
    "typescript-collections": "^1.2.3",
    "webpack": "^2.6.1"
  },
  "engines": {
    "node": ">= 7.7.4"
  },
  "ava": {
    "require": "ts-node/register",
    "files": "tests/**/*.ts"
  },
  "nyc": {
    "include": [
      "src/**/*.ts",
      "tests/**/*.spec.ts"
    ],
    "extension": [
      ".ts",
      ".tsx"
    ],
    "exclude": [
      "**/*.d.ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "lcov",
      "text",
      "html"
    ],
    "sourceMap": true,
    "all": true
  },
  "devDependencies": {
    "@types/compression": "0.0.33",
    "@types/es6-collections": "^0.5.30",
    "@types/es6-shim": "^0.31.34",
    "@types/express": "^4.0.36",
    "@types/google.analytics": "0.0.33",
    "@types/mocha": "^2.2.41",
    "@types/node": "^7.0.32",
    "@types/socket.io": "^1.4.29",
    "@types/socket.io-client": "^1.4.29",
    "ava": "^0.19.1",
    "awesome-typescript-loader": "^3.1.3",
    "copy-webpack-plugin": "^4.0.1",
    "es6-shim": "^0.35.3",
    "html-loader": "^0.4.5",
    "html-minifier": "^3.5.2",
    "html-webpack-plugin": "^2.28.0",
    "jasmine-core": "^2.6.3",
    "karma": "^1.7.0",
    "karma-chrome-launcher": "^2.1.1",
    "karma-mocha": "^1.3.0",
    "karma-webpack": "^2.0.3",
    "mocha": "^3.4.2",
    "mocha-junit-reporter": "^1.13.0",
    "nyc": "^11.0.2",
    "source-map-loader": "^0.2.1",
    "source-map-support": "^0.4.15",
    "tap-xunit": "^1.7.0",
    "ts-node": "^3.0.6",
    "tslint": "^5.4.3",
    "tslint-junit-formatter": "^5.0.0",
    "tslint-loader": "^3.5.3",
    "webpack-dev-server": "^2.5.0"
  }
}
